<div class="whole_page bg-light">
  <h1>Game Addresses</h1>



<p id="notice"><%= notice %></p>
  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="col-lg-12">
        <div class="main-box no-header clearfix">
          <div class="main-box-body clearfix">
            <div class="table-responsive ">
              <table class="table user-list table-striped">
                <thead>
                  <tr>
                    <th>Datacenter</th>
                      <th>Location</th>
                      <th>Plot</th>
                      <th>Ward</th>
                      <th>Roomnumber</th>
                      <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @game_addresses.each do |game_address| %>
                      <tr>
                        <td><%= sanitize game_address.datacenter.html_safe%></td>
                        <td><%= sanitize game_address.location.html_safe %></td>
                        <td><%=  game_address.plot %></td>
                        <td><%=  game_address.ward %></td>
                        <td><%=  game_address.roomnumber %></td>
                      
                        <td><%= link_to 'Edit', edit_game_address_path(game_address), class: "btn btn-sm btn-outline-secondary" %></td>
                        <td><%= link_to 'Destroy', game_address, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger"%></td>
                      </tr>
                    <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="p-5">
  <%= link_to 'New Game Address', new_game_address_path,  class: "btn btn-sm btn-outline-secondary " %>
  </div>
</div>
</div>