<p id="notice"><%= notice %></p>

<h1>Game Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Datacenter</th>
      <th>Location</th>
      <th>Plot</th>
      <th>Ward</th>
      <th>Roomnumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_addresses.each do |game_address| %>
      <tr>
        <td><%= game_address.datacenter %></td>
        <td><%= game_address.location %></td>
        <td><%= game_address.plot %></td>
        <td><%= game_address.ward %></td>
        <td><%= game_address.roomnumber %></td>
        <td><%= link_to 'Show', game_address %></td>
        <td><%= link_to 'Edit', edit_game_address_path(game_address) %></td>
        <td><%= link_to 'Destroy', game_address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game Address', new_game_address_path %>
