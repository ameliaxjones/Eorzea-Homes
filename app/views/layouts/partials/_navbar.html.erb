            <li><%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'dropdown-item'  %></li>
          </ul>
        </div>
        <%else%>
        <div class="dropdown text-end"> 
        <%= link_to "Login", new_user_session_path, :class => 'dropdown-item'  %>
        </div>
        <%end%>
      </div>
    </div>
  </header>

