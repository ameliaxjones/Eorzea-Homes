<%# #nav bar added %>

<header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-dark text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="images/logo.png"><use xlink:href="/"/></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <a class="navbar-brand" href="/">Eorzea Homes</a>
          <li><a href="/" class="nav-link px-2 link-secondary">Home</a></li>
          <li><a href="/listings"" class="nav-link px-2 link-dark">Listings</a></li>
          <li><a href="/listings" class="nav-link px-2 link-dark">My Listings</a></li>
        </ul>

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
