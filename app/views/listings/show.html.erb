<div class="whole_container bg-light ">
  <div class="container project">
    <div class="row">
      <div class="col-md-5">
        <div class="project-info-box mt-5">
          <h5><%= @listing.title %></h5>
          <br>
          <h6 class="mb-0"><%= @listing.short_body %></h6>
        </div>
        <div class="project-info-box">
          <p><b>Details: </b> <%= @listing.body %></p>
          <p><b>Designer:</b> <%= @listing.user.email %></p>
          <p><strong>Price : </strong>
            <%= link_to "Order now", new_order_path({:listing_id => @listing.id}), :class => "btn btn-primary" %>
            <%# #only sellers can edit thre own lisitng %>
            <% if @listing.user_id == current_user.id%>
              <%= link_to 'Edit', edit_listing_path(@listing) %> |
            <%end%>
            <%= link_to 'Back', listings_path %>
          </div>
        </div>
        <div class="house_img col mt-5">
          <%# #shows the images that have been uploaded %>
        </div>
      </div>
    </div>
  </div>
  <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <% @listing.photos.each_with_index do |image, index| %>
        <div class="item <%= index == 0 ? 'active' : '' %>">
          <%= image_tag image, class: "d-block w-100" %>
          <end>
          <% end %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <script>
        $('.carousel').carousel()
      </script>
