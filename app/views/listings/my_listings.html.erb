
<div class="Whole-page bg-light">
  <h1>My Listings</h1>
  <p id="notice"><%= notice %></p>
  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="col-lg-12">
        <div class="main-box no-header clearfix">
          <div class="main-box-body clearfix">
            <div class="table-responsive ">
              <table class="table user-list table-striped">
                <thead>
                  <tr>
                    <th><span>Title</span></th>
                    <th><span>Price</span></th>
                    <th class="text-center"><span>Open</span></th>
                    <th><span>Short Body</span></th>
                  </tr>
                </thead>
                <tbody>
                  <% @listings.each do |listing| %>
                    <tr>
                      <td><%= listing.title %></td>
                      <td><%= listing.price %></td>
                      <td><%= listing.open %></td>
                      <td><%= listing.short_body %></td>
                      <td><%= link_to 'Show', listing, {:class => "btn btn-sm btn-outline-secondary"} %></td>
                      <td><%= link_to 'Edit', edit_listing_path(listing), {:class => "btn btn-sm btn-outline-secondary"} %></td>
                      <td><%= button_to "delete", listing, {:onclick => "return confirm('Are you
                      sure?')", :method => :delete}%>
                        %></td>
                    </tr>
                  <% end %>
                </table>
                <%= link_to 'New Listing', new_listing_path, {:class => "btn btn-sm btn-outline-secondary"} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
<script>
    $('#exampleModal').modal(options)
</script>