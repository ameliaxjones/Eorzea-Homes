<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Open</th>
      <th>User</th>
      <th>Short body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.price %></td>
        <td><%= listing.open %></td>
        <td><%= listing.user_id %></td>
        <td><%= listing.short_body %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Listing', new_listing_path %>



<h1>Listings</h1>

<div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @listings.each do |listing| %> 
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            <div class="card-body">
            <h4 class="card-title"><%= listing.title%></h4>
              <p class="card-text"><%= listing.short_body%></p>
              <p class="card-user"><%= listing.user_id%></p>
              <div class="d-flex justify-content-between align-items-center">
             

                <div class="btn-group">
                  <%= link_to 'View', listing, class: "btn btn-sm btn-outline-secondary" %>
                  <% if listing.user_id == current_user.id %>
                  <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-sm btn-outline-secondary" %>
                  <%end%>
                </div>
                <small class="text-muted"></small>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>







