<%= form_with(model: listing) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class=" d-flex justify-content-center flex-nowrap mt-5 " >
      <div class="card mb-4 ">
          <div class="card-header"> heading </div>
              <div class="card-body">
                  <div class="field">
                    <%= form.label :title, class: "small mb-1"%>
                    <%= form.text_field :title, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= form.label :price, class: "small mb-1"%>
                    <%= form.text_field :price, class: "form-control" %>
                  </div>

                  <div class="field">
                    <%= form.label :open, class: "small mb-1" %>
                    <%= form.check_box :open %>
                  </div>

                  <div class="field">
                    <%= form.label :short_body, class: "small mb-1" %>
                    <%= form.text_field :short_body, class: "form-control" %>
                  </div>

                  <div class="field">
                      <%= form.label :body, class: "small mb-1" %>
                      <%= form.text_area :body, class: "form-control"%>
                    </div>

                  <div class="photos">
                    <%= form.label :photos %>
                    <%= form.file_field :photos, :multiple => true %>
                  </div>
                  
                  <div class="actions" class="btn btn-sm btn-outline-secondary">
                    <%= form.submit %>
                  </div>
                </div>
            </div>
        </div>
   </div>
<% end %>

 



