

<div class="album py-5 bg-light">
  <h1>Listings</h1>
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @listings.each do |listing| %> 
        <div class="col">
          <div class="card shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>

            <div class="card-body">
            <h4 class="card-title"><%= listing.title%></h4>
              <p class="card-text"><%= listing.short_body%></p>
              <p class="card-user"><%= listing.user.email%></p>
              <div class="d-flex justify-content-between align-items-center">
             

                <div class="btn-group">
                  <%= link_to 'View', listing, class: "btn btn-sm btn-outline-secondary" %>
                  <% if listing.user_id == current_user.id %>
                  <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-sm btn-outline-secondary" %>
                  <%end%>
                </div>
                <small class="text-muted"></small>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>







