<div class="Whole-page bg-light m-0 p-0">
  <h1>Orders</h1>
  <p id="notice"><%= notice %></p>
  <div class="container bootstrap snippets bootdey">
    <div class="row">
      <div class="col-lg-12">
        <div class="main-box no-header clearfix">
          <div class="main-box-body clearfix">
            <div class="table-responsive ">
              <table class="table user-list table-striped">
                <thead>
                  <tr>
                    <th>Listing</th>
                    <th>Purchase price</th>
                    <th>Game address</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each do |order| %>
                    <tr>
                      <td><%= order.listing.title %></td>
                      <td><%= order.purchase_price %></td>
                      <td><%= order.game_address.datacenter %></td>
                      <td><%= link_to 'Show', order, class: "btn btn-sm btn-outline-secondary" %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
