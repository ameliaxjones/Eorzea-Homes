<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
	<thead>
		<tr>
			<th>Listing</th>
			<th>Purchase price</th>
			<th>Game address</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= order.listing.title %></td>
				<td><%= order.purchase_price %></td>
				<td><%= order.game_address.datacenter %></td>
				<td><%= link_to 'Show', order %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

