<div class="container-xl px-4 mt-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row pb-2">
      <div class="col-xl-4 mt-5 ">
        <!-- Profile picture card-->
        <div class="card mb-4 mb-xl-0 pb-3">
          <div class="card-header">Profile Picture</div>
          <div class="card-body text-center">
            <% if current_user.avatar.present? %>
              <br>
              <%= image_tag current_user.avatar, class: "img-account-profile rounded-circle mb-2", width: "50%" %>
              <%else%>
            <%= image_tag "profile-image.jpg", class: "rounded-circle ", width: "50%" %>
          <%end%>
            
            <!-- Profile picture help block-->
            <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
            <!-- Profile picture upload button-->
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        </div>
        <!-- Adress-->
        <div class="card  mb-xl-0 mt-2">
          <div class="card-header">Add Address</div>
          <div class="card-body text-center">
            <%= link_to "Manage addresses", game_addresses_path, class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </div>
      <div class="col-xl-8 mt-5">
        <!-- Account details card-->
        <div class="card mb-4">
          <div class="card-header">Account Details</div>
          <div class="card-body">
            <!-- Form Row        -->
            <div class="row gx-3 mb-3">
              <!-- Form Group (organization name)-->
              <div class="col-md-6">
                <%= f.label :password, class: "small mb-1" %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>
              <div class="col-md-6">
                <%= f.label :password_confirmation, class: "small mb-1" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>
            <div class="mb-3">
              <%= f.label :current_password, class: "small mb-1"%> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control"%>
            </div>
            <div class="mb-3">
              <%= f.label :email, class: "small mb-1" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
            <div class="field">
        <%= f.label "Please tick if you want to be designer", class: "small mb-3" %>
          <%= f.check_box :seller %>
          </div>
            <!-- Form Row-->
            <%= f.submit "Update", class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <!-- Form ends  DO NOT PUT DELETE BUTTON INSIDE THIS FORM IT WILL DELETE USERS WHEN TRYING TO SAVE -->
  <% end %>
  <div class=" row">
    <div class="delete_block col-xl-4 pb-2 ">
      <!-- delete  button-->
      <div class="card ">
        <div class="card-header">Unhappy?</div>
        <div class="card-body text-center">
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-sm btn-outline-danger" %></p>
      </div>
    </div>
  </div>
</div>
